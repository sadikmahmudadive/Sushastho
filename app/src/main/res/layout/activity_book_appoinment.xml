<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundwithbluedock"
    tools:context=".BookAppoinmentActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Book Apoiinment"
        android:textColor="@color/Light_blue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="127dp" />

    <EditText
        android:id="@+id/editTextLoginPassword"
        android:layout_width="375dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_box_shape_blue"
        android:drawableLeft="@drawable/ic_phone_blue"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Contact Number"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/Light_blue"
        android:textColorHint="@color/Light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <EditText
        android:id="@+id/editTextRegConfirmPassword"
        android:layout_width="375dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_box_shape_blue"
        android:drawableLeft="@drawable/ic_fees_blue"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Fees"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/Light_blue"
        android:textColorHint="@color/Light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginPassword" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="375dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_box_shape_blue"
        android:drawableLeft="@drawable/ic_map"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/Light_blue"
        android:textColorHint="@color/Light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegUsername" />

    <EditText
        android:id="@+id/editTextRegUsername"
        android:layout_width="375dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_box_shape_blue"
        android:drawableLeft="@drawable/ic_profile_blue"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Fullname"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/Light_blue"
        android:textColorHint="@color/Light_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:text="Select Date"
        android:textColor="@color/Light_blue"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="760dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:text="Select Time"
        android:textColor="@color/Light_blue"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="760dp" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_make_appoinment"
        android:text=""
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="907dp" />

    <Button
        android:id="@+id/buttonAppDate"
        style="?android:spinnerStyle"
        android:layout_width="161dp"
        android:layout_height="60dp"
        android:text="01/12/2024"
        android:textSize="20dp"
        android:fontFamily="@font/rubik"
        android:textColor="@color/Light_blue"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="814dp" />

    <Button
        android:id="@+id/buttonAppTime"
        style="?android:spinnerStyle"
        android:layout_width="161dp"
        android:layout_height="60dp"
        android:fontFamily="@font/rubik"
        android:text="01:00"
        android:textColor="@color/Light_blue"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="814dp" />

</androidx.constraintlayout.widget.ConstraintLayout>